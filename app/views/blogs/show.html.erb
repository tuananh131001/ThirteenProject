<div class="join join-vertical">
  <h1 class="text-2xl text-blue-400 font-bold"><%= @blog.title %></h1>

  <p><%= @blog.content %></p>

  <ul>
    <li><%= link_to "Edit", edit_blog_path(@blog), class: 'btn btn-secondary' %></li>
    <li><%= link_to "Destroy", blog_path(@blog), data: {
                      turbo_method: :delete,
                      turbo_confirm: "Are you sure?"
                    }, class: 'btn btn-warning' %></li>
  </ul>
</div>
